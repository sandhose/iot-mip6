$TTL    300
@	IN	SOA	home-agent.{{ domain }}. root.home-agent.{{ domain }}. (
	{{ serial }}	; Serial
	604800	; Refresh
	86400	; Retry
	2419200	; Expire
	604800 )	; Negative Cache TTL
;
@	IN	NS	home-agent.{{ domain }}.

{% for host in wifi_hosts %}
{% if 'ip6' in host %}
{{ host.ip6 | ipaddr('revdns') }}	IN	PTR	{{ host.name }}.{{ domain }}.
{% endif %}
{% if 'mac' in host %}
{{ wifi_net6 | slaac(host.mac) | ipaddr('revdns') }}	IN	PTR	{{ host.name }}.{{ domain }}.
{% endif %}
{% endfor %}

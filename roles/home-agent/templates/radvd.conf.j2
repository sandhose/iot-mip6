interface wlan0 {
  AdvSendAdvert on;

  prefix {{ wifi_net6 }} {
    AdvOnLink on;
    AdvRouterAddr on;
  };

  RDNSS {{ wifi_gateway6 }} {
  };
};

interface {{ home_iface }} {
  AdvSendAdvert on;
  MaxRtrAdvInterval 3;
  MinRtrAdvInterval 1;
  AdvIntervalOpt on;
  AdvHomeAgentFlag on;
  AdvHomeAgentInfo on;
  HomeAgentLifetime 1800;
  HomeAgentPreference 10;

  prefix {{ home_net6 }} {
    AdvOnLink on;
    AdvAutonomous on;
    AdvRouterAddr on;
  };
};

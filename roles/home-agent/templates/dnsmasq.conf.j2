domain-needed
bogus-priv
bind-interfaces
no-resolv
expand-hosts

local=/{{ domain }}/
domain={{ domain }}
dhcp-fqdn

enable-ra

port=53
dhcp-range={{ wifi_net | ipaddr('10') | ipaddr('address') }},{{ wifi_net | ipaddr('-2') | ipaddr('address') }},12h
dhcp-range={{ wifi_net6 | regex_replace('^(.*)/\d*$', '\\1') }},ra-stateless,ra-names,slaac,{{ wifi_net6 | ipaddr('prefix') }},12h

except-interface=eth0

{% for ns in nameservers %}
server={{ ns }}
{% endfor %}
